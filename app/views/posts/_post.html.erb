<div id="post-<%= post.id %>">
  <h1 class="postTitle"><%= link_to post.title, post %></h1>
  
  <div class="post">
    <%= raw textilize(post.body) %>
  </div>
  <%- if user_signed_in? && current_user.is_admin %>
    <small>
      <%= link_to 'Edit', edit_post_path(post) %> |
      <%= link_to 'Destroy', post, :method => :delete %>
    </small>
  <%- end %>
</div>